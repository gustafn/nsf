  # both flag

  ? {D info superclass -a -b} \
      {invalid argument '-b', maybe too many arguments; should be "::D info superclass ?-closure? ?/pattern/?"}

  ? {D info superclass -- -a -b} \
      {invalid argument '-b', maybe too many arguments; should be "::D info superclass ?-closure? ?/pattern/?"}

  ? {D info superclass -a -- -b} \
